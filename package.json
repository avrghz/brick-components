{
    "name": "@avrghz/brick-components",
    "author": "Aswin Varghese",
    "version": "1.0.0",
    "description": "A library of web components",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/brick-components/brick-components.js",
    "files": [
        "dist/",
        "loader/"
    ],
    "repository": {
        "url": "https://github.com/avrghz/brick-components.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "gc": "plop Component -- --prefix bk",
        "start": "run-p stencil:start storybook:start",
        "build": "run-s stencil:build storybook:build",
        "test": "stencil test --spec --e2e",
        "lint": "tslint 'src/**/*.{ts,tsx,js}'",
        "test:e2e": "stencil test --e2e",
        "test:screenshot": "stencil test --e2e --screenshot",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "dev": "stencil build --dev --watch --serve",
        "stencil:start": "stencil build --docs --dev --watch",
        "stencil:build": "stencil build --docs",
        "storybook:start": "start-storybook -p 8000",
        "storybook:build": "build-storybook -c .storybook -o stories"
    },
    "devDependencies": {
        "@babel/core": "^7.11.1",
        "@stencil/core": "^1.17.3",
        "@stencil/react-output-target": "0.0.9",
        "@stencil/sass": "^1.3.2",
        "@storybook/addon-actions": "^6.0.7",
        "@storybook/addon-knobs": "^6.0.7",
        "@storybook/addon-notes": "^5.3.19",
        "@storybook/addon-storysource": "^6.0.7",
        "@storybook/addons": "^6.0.7",
        "@storybook/theming": "^6.0.7",
        "@storybook/web-components": "^6.0.7",
        "@types/jest": "^26.0.10",
        "@types/lodash": "^4.14.159",
        "@types/puppeteer": "^3.0.1",
        "babel-loader": "^8.1.0",
        "copy-webpack-plugin": "^6.0.3",
        "husky": "^4.2.5",
        "jest": "^26.4.0",
        "jest-cli": "^26.4.0",
        "lit-html": "^1.2.1",
        "npm-run-all": "^4.1.5",
        "plop": "^2.7.4",
        "prettier": "^2.0.5",
        "puppeteer": "^5.2.1",
        "storybook-dark-mode": "^1.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0"
    },
    "license": "MIT",
    "dependencies": {
        "@a11y/focus-trap": "^1.0.5",
        "@polymer/iron-icons": "^3.0.1",
        "@popperjs/core": "^2.4.4",
        "ionicons": "^5.1.2",
        "lodash": "^4.17.20",
        "popmotion": "^8.7.3"
    },
    "jest": {
        "testMatch": [
            "**/src/**/*.test.tsx"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    }
}
